<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginCook">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-67dp"
        tools:layout_editor_absoluteY="-30dp">

        <Button
            android:id="@+id/cookLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="user LOGIN" />

        <TextView
            android:id="@+id/bannerc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:gravity="center"
            android:text="Ottawa Mealer"
            android:textSize="40dp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/ForgotPasswordc"
            android:layout_width="123dp"
            android:layout_height="34dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="370dp"
            android:gravity="center"
            android:text="Forgot Password?"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/regc"
            android:layout_width="123dp"
            android:layout_height="34dp"
            android:layout_marginLeft="270dp"
            android:layout_marginTop="-35dp"
            android:gravity="center"
            android:text="Register"
            android:textStyle="bold" />

        <Button
            android:id="@+id/login_btnc"
            android:layout_width="271dp"
            android:layout_height="69dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="-150dp"
            android:text="Login" />

        <EditText
            android:id="@+id/emailc"
            android:layout_width="316dp"
            android:layout_height="48dp"
            android:layout_marginTop="-280dp"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/pswrdc"
            android:layout_width="319dp"
            android:layout_height="52dp"
            android:layout_marginTop="50dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword" />

        <ProgressBar
            android:id="@+id/progressBar2c"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>